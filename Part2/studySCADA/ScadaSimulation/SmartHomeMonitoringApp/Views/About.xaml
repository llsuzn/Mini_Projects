<mah:MetroWindow 
    x:Class="SmartHomeMonitoringApp.Views.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:SmartHomeMonitoringApp.Views"
    mc:Ignorable="d"
    Title="About" Height="250" Width="350" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="MetroWindow_Loaded"> 
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="LblDisplayName" Grid.Row="0" FontWeight="Bold" FontSize="17" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="1" x:Name="TxtApplicationInfo" Margin="5" AcceptsReturn="True" TextWrapping="Wrap"/>
        <Button Grid.Row="2" x:Name="BtnClose" IsDefault="True" Content="OK"  Width="80" Click="BtnClose_Click" Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"/>
    </Grid>
</mah:MetroWindow>
